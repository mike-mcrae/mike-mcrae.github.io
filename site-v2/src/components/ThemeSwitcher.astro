---
const themes = [
  { id: "editorial", label: "Editorial" },
  { id: "simple", label: "Simple" },
  { id: "nightlab", label: "Night" },
  { id: "lab", label: "Lab" },
  { id: "gallery", label: "Pretty" }
];
---
<div class="switcher-group">
  <span class="switcher-label">Color</span>
  <div class="theme-switcher" data-theme-switcher>
  {themes.map((theme) => (
    <button type="button" data-theme-button={theme.id}>
      {theme.label}
    </button>
  ))}
  </div>
</div>
