---
import { nav, site } from "../config";
import ThemeSwitcher from "./ThemeSwitcher.astro";
import StructureSwitcher from "./StructureSwitcher.astro";
---
<header class="page-shell">
  <div class="flex flex-wrap items-center justify-center gap-3" style="margin-bottom: 12px;">
    <ThemeSwitcher />
    <StructureSwitcher />
  </div>
  <div class="glass site-nav" style="border-radius: 28px; padding: 20px 28px;">
    <div class="nav-grid">
      <div class="nav-brand">
        <img
          src="/images/headshot.png"
          alt="Mike McRae headshot"
          width="86"
          height="86"
          style="border-radius: 999px; object-fit: cover; border: 2px solid rgba(17, 17, 15, 0.08);"
        />
        <div>
          <a href="/" class="text-2xl font-semibold" style="font-family: Fraunces, serif;">
            {site.title}
          </a>
          <p class="text-sm" style="color: var(--muted); margin: 4px 0 0;">
            {site.tagline}
          </p>
        </div>
      </div>
      <button class="nav-toggle" type="button" aria-expanded="false" aria-controls="site-menu" aria-label="Open menu">
        <span></span>
        <span></span>
        <span></span>
      </button>
      <nav id="site-menu" class="nav-links">
        {nav.map((item) => (
          <a class="badge" href={item.href}>{item.label}</a>
        ))}
      </nav>
    </div>
  </div>
</header>
