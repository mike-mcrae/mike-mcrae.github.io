---
import { site } from "../config";
const year = new Date().getFullYear();
---
<footer class="page-shell" style="padding-top: 0;">
  <div class="glass" style="border-radius: 24px; padding: 24px;">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
      <div>
        <p style="margin: 0; font-weight: 600;">Let’s connect</p>
        <p style="margin: 4px 0 0; color: var(--muted);">{site.email}</p>
      </div>
      <div class="flex gap-4 text-sm">
        <a href={site.social.github} aria-label="GitHub" title="GitHub">
          <svg viewBox="0 0 24 24" width="20" height="20" aria-hidden="true">
            <path
              fill="currentColor"
              d="M12 1.5A10.5 10.5 0 0 0 8.7 22c.5.1.7-.2.7-.5v-1.8c-2.9.6-3.5-1.4-3.5-1.4-.5-1.2-1.2-1.5-1.2-1.5-1-.7.1-.7.1-.7 1.1.1 1.7 1.2 1.7 1.2 1 .1.8 1.9 2.9 1.3.1-.7.4-1.2.7-1.5-2.3-.2-4.6-1.1-4.6-5 0-1.1.4-2.1 1.1-2.9-.1-.2-.5-1.3.1-2.7 0 0 .9-.3 2.9 1.1a10 10 0 0 1 5.3 0c2-1.4 2.9-1.1 2.9-1.1.6 1.4.2 2.5.1 2.7.7.8 1.1 1.8 1.1 2.9 0 3.9-2.4 4.7-4.7 5 .4.3.7.9.7 1.9v2.8c0 .3.2.6.7.5A10.5 10.5 0 0 0 12 1.5Z"
            />
          </svg>
        </a>
        <a href={site.social.twitter} aria-label="X" title="X">
          <svg viewBox="0 0 24 24" width="20" height="20" aria-hidden="true">
            <path
              fill="currentColor"
              d="M17.4 3H20l-6.3 7.2L21.5 21h-6.4l-3.6-4.7L7.7 21H5.1l6.8-7.7L2.5 3h6.5l3.3 4.3L17.4 3Zm-1 16h1.7L7.7 5H6L16.4 19Z"
            />
          </svg>
        </a>
        <a href={site.social.orcid} aria-label="ORCID" title="ORCID">
          <svg viewBox="0 0 24 24" width="20" height="20" aria-hidden="true">
            <path
              fill="currentColor"
              d="M12 1.5A10.5 10.5 0 1 0 22.5 12 10.5 10.5 0 0 0 12 1.5Zm0 18.9A8.4 8.4 0 1 1 20.4 12 8.4 8.4 0 0 1 12 20.4Z"
            />
            <path
              fill="currentColor"
              d="M9 7.5a1.1 1.1 0 1 1-1.1-1.1A1.1 1.1 0 0 1 9 7.5Zm-.2 2.3h-1.8v7.1h1.8Zm2.5 0H14a3.4 3.4 0 0 1 0 6.8h-2.7Zm1.8 5.3H14a1.9 1.9 0 0 0 0-3.8h-.9Z"
            />
          </svg>
        </a>
      </div>
      <div class="text-xs" style="color: var(--muted);">© {year} {site.title}</div>
    </div>
  </div>
</footer>
